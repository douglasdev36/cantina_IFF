# ===== Modo Local (usa somente Postgres do Docker) =====
# Ative para não fazer NENHUMA chamada à Supabase na aplicação
VITE_USE_LOCAL_DB=true

# Credenciais do Postgres local (para servidores locais; o frontend não usa diretamente)
VITE_LOCAL_DB_HOST=localhost
VITE_LOCAL_DB_PORT=5432
VITE_LOCAL_DB_NAME=cantina_verde
VITE_LOCAL_DB_USER=cantina_user
VITE_LOCAL_DB_PASSWORD=cantina_password

# Servidor de autenticação local (Express)
# URL usada pelo frontend para chamar o servidor de auth local
VITE_LOCAL_AUTH_URL=http://localhost:4000
# Porta e segredo do JWT usados pelo servidor local
LOCAL_AUTH_PORT=4000
LOCAL_JWT_SECRET=dev_secret_change_me

# ===== Modo Nuvem (Supabase) — DESATIVE no ambiente local =====
# Se VITE_USE_LOCAL_DB=false, configure abaixo para apontar ao seu projeto Supabase
#VITE_SUPABASE_URL=https://<your-project>.supabase.co
#VITE_SUPABASE_ANON_KEY=eyJhbGciOi... (chave anon)